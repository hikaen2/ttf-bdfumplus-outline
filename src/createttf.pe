#!/usr/bin/fontforge -script
#
# createttf.pe
# This file is part of BDF UM+ OUTLINE.
#

Open("data/template.sfd")
Import("compiled/bdfUMplus.bdf")
Import("compiled/svg/u*.svg")
RenameGlyphs("Adobe Glyph List")
SetFontNames("BDF_UM+_OUTLINE", "BDF UM+ OUTLINE", "BDF UM+ OUTLINE", "Regular", " ", $1)
ScaleToEm(1024)
SelectAll()
Simplify()
Save("compiled/bdfUMplus-outline.sfd")
Generate("compiled/bdfUMplus-outline.ttf", "ttf")

Close()
Quit()
