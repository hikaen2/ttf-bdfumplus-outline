def sjis_to_jis(sjis)
  hi = (sjis >> 8) & 0xff
  lo = sjis & 0xff
  return lo if hi == 0
  hi -= (hi<=0x9f) ? 0x71 : 0xb1
  hi = hi * 2 + 1
  lo -= (lo > 0x7f) ? 1 : 0
  hi += (lo >= 0x9e) ? 1 : 0
  lo -= (lo >= 0x9e) ? 0x7d : 0x1f
  return hi << 8 | lo
end

STDIN.read.scan(/0x([0-9A-Fa-f]+)[ \t]+0x([0-9A-Fa-f]+)/).each do |sjis, unicode|
  puts("0x%04X\t0x%s" % [sjis_to_jis(sjis.hex), unicode])
end
